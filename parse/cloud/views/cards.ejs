			    txt = txt.concat("</tr>");
			    txt = txt.concat("<tr><td colspan='4'>Buy this card at <a target='_blank' href='" + link + "'>TCGPlayer</a>.</td></tr>");
			    txt = txt.concat("</table>");
			    
				document.getElementById("tcgPriceInfo"+id).innerHTML = txt;
