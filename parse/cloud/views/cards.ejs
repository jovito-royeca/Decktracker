          				}
        		  	}
        		  
        		  	xx = x[i].getElementsByTagName("lowprice");
        		  	{
        				try
          				{
          					low = xx[0].firstChild.nodeValue == "0" ? "N.A." : ("$"+xx[0].firstChild.nodeValue);
          				}
        				catch (er)
